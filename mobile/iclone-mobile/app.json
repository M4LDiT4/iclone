{
  "expo": {
    "name": "iclone-mobile",
    "slug": "iclone-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "iclonemobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.iclonemobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      },
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "googleServicesFile": "./google-services.json",
      "package": "com.anonymous.iclonemobile"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "@morrowdigital/watermelondb-expo-plugin"
      ],
      ["@react-native-firebase/app"],
      ["@react-native-firebase/auth"],
      ["@react-native-firebase/crashlytics"],

      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "SFProText",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/sfPro/SF-Pro-Text-Regular.otf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/sfPro/SF-Pro-Text-Bold.otf",
                    "weight": 700
                  },
                  {
                    "path": "./assets/fonts/sfPro/SF-Pro-Text-RegularItalic.otf",
                    "weight": 400,
                    "style": "italic"
                  }
                ]
              },
              {
                "fontFamily": "SFProDisplay",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/sfPro/SF-Pro-Display-Bold.otf",
                    "weight": 700
                  },
                  {
                    "path": "./assets/fonts/sfPro/SF-Pro-Display-Semibold.otf",
                    "weight": 600
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/sfPro/SF-Pro-Text-Regular.otf",
              "./assets/fonts/sfPro/SF-Pro-Text-Bold.otf",
              "./assets/fonts/sfPro/SF-Pro-Text-RegularItalic.otf",
              "./assets/fonts/sfPro/SF-Pro-Display-Bold.otf",
              "./assets/fonts/sfPro/SF-Pro-Display-Semibold.otf"
            ]
          }
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "486241ea-d014-4cef-b03c-139cf449a6ec"
      }
    }
  }
}
